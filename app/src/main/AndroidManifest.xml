<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.mvp.sample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="tw.com.mvp.sample.main.MainActivity"
            android:theme="@style/AppTheme.OverlapSystemBar">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tw.com.mvp.sample.favorite_choose.FavoriteChooseActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="tw.com.mvp.sample.login.LoginActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>